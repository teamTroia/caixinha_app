<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Troia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenTroiaOld</item>
        <item name="colorPrimaryVariant">@color/greenTroiaOld</item>
        <item name="colorOnPrimary">@color/whiteTroiaOld</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/greenTroiaOld</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/greenTroiaOld</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_adapt</item>
        <item name="windowSplashScreenBackground">@color/whiteTroia</item>
        <item name="postSplashScreenTheme">@style/Theme.Troia</item>
        <item name="android:windowSplashScreenAnimationDuration">1200</item>
    </style>
</resources>